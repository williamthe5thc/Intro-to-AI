    <script>
        function calculateScores() {
            // Get importance ratings
            const ratings = {
                research: parseInt(document.querySelector('select[name="research_rating"]').value) || 0,
                document: parseInt(document.querySelector('select[name="document_rating"]').value) || 0,
                ux: parseInt(document.querySelector('select[name="ux_rating"]').value) || 0,
                cost: parseInt(document.querySelector('select[name="cost_rating"]').value) || 0,
                integration: parseInt(document.querySelector('select[name="integration_rating"]').value) || 0,
                support: parseInt(document.querySelector('select[name="support_rating"]').value) || 0
            };

            // Calculate weighted scores for each platform
            const platforms = ['westlaw', 'lexis', 'bloomberg', 'cocounsel'];
            const platformRows = document.querySelectorAll('.assessment-table tbody tr');
            
            platforms.forEach((platform, index) => {
                const row = platformRows[index + 1]; // Skip header row
                const inputs = row.querySelectorAll('input[type="number"]');
                
                if (inputs.length === 6) {
                    const scores = Array.from(inputs).map(input => parseInt(input.value) || 0);
                    const weightedScore = (
                        scores[0] * ratings.research +
                        scores[1] * ratings.document +
                        scores[2] * ratings.ux +
                        scores[3] * ratings.cost +
                        scores[4] * ratings.integration +
                        scores[5] * ratings.support
                    );
                    
                    const maxPossible = Object.values(ratings).reduce((sum, rating) => sum + rating * 5, 0);
                    const percentage = maxPossible > 0 ? Math.round((weightedScore / maxPossible) * 100) : 0;
                    
                    document.getElementById(platform + '_score').textContent = `${weightedScore} (${percentage}%)`;
                }
            });
        }

        function generateReport() {
            alert('Assessment report functionality would generate a comprehensive PDF report with your analysis, recommendations, and decision matrix. In a real implementation, this would create a downloadable document.');
        }

        // Auto-calculate scores when values change
        document.addEventListener('change', function(e) {
            if (e.target.type === 'number' || e.target.tagName === 'SELECT') {
                calculateScores();
            }
        });
    </script>
